[Unit]
Description=Glonax RTC Proxy
After=network-online.target
Wants=network-online.target

[Service]
Restart=always
RestartSec=5

#User=your_username
#Group=your_group
ExecStart=/bin/bash -c 'source /home/eve/glonax_agent/.venv/bin/activate && python3 /home/eve/glonax_agent/rtc_server.py --log-systemd --cache=/var/lib/glonax-agent/cache.db --socket=/run/glonax/glonax.sock'
WorkingDirectory=/home/eve/glonax_agent
StateDirectory=glonax-agent
Environment=PYTHONUNBUFFERED=1
KillSignal=SIGINT

ProtectClock=true

SystemCallArchitectures=native

[Install]
WantedBy=multi-user.target
